<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:padding="16dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/profilePicImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_man_2_24" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/profilePicImageView"
            android:text="Lakshya Choudhary"
            android:textSize="22dp"
            android:paddingBottom="5dp"
            android:textColor="#000"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingsRatingBar"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:numStars="5"
            android:layout_marginTop="18dp"
            android:progressBackgroundTint="#fff"
            android:progressTint="#F6995C"
            android:rating="3"
            android:scaleX="1"
            android:scaleY="1" />

        <TextView
            android:id="@+id/specializationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextView"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@+id/ratingsRatingBar"
            android:layout_toEndOf="@+id/profilePicImageView"
            android:text="Four Wheeler Washer"
            android:paddingTop="5dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000"

            android:textSize="18dp" />

        <TextView
            android:id="@+id/casesWonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/specializationTextView"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@+id/ratingsRatingBar"
            android:layout_toEndOf="@+id/profilePicImageView"
            android:text="Pricing (Rs): 100"
            android:textColor="#000"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/casesWonTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:drawableTint="#807E7E"
            android:text="Patna"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/editTextPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/casesWonTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/locationTextView"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawableTint="#7C7B7B"
            android:textColor="#000"
            android:text="+91-620621814" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
