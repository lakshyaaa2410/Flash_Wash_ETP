<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#496989"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignUp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="42sp"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="Flash Wash"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#222831"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <!-- User's Image -->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:civ_border_color="#EADFB4"
                android:elevation="3dp"
                app:civ_border_width="3dp"
                android:src="@drawable/baseline_man_2_24" />

            <!-- Name Field -->
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your Name"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_marginTop="5dp"
                android:inputType="textPersonName"
                android:background="@drawable/custom_edittext"
                android:padding="15dp"
                android:maxLines="1"
                android:textColorHint="#b8b6b6"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <!-- Email Field -->
            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your Email"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/custom_edittext"
                android:padding="15dp"
                android:maxLines="1"
                android:textColorHint="#b8b6b6"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <!-- Phone Field -->
            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your Phone Number"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:padding="15dp"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLines="1"
                android:textColorHint="#b8b6b6"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <!-- Password Field -->
            <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Password"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/custom_edittext"
                android:padding="15dp"
                android:maxLines="1"
                android:textColorHint="#b8b6b6"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <!-- Confirm Password Field -->
            <TextView
                android:id="@+id/textViewConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:background="@drawable/custom_edittext"
                android:padding="15dp"
                android:textColorHint="#b8b6b6"
                android:textColor="@color/white"
                />

            <Switch
                android:id="@+id/roleSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register As Washer"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />


            <!-- Register Button -->
            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#F9B572"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:text="Register"/>

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#EADFB4"
                android:clickable="true"
                android:gravity="center"
                android:textStyle="italic"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="Already Registered? Login Now"
                android:textColor="@color/black"
                android:textSize="16dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>
