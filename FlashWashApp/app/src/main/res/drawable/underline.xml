<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="1dp" android:height="1dp" /> <!-- Adjust the thickness of the dots -->
            <solid android:color="#F6995C" /> <!-- Adjust the color of the dots -->
        </shape>
    </item>
    <item android:top="2dp"> <!-- Adjust the distance between dots -->
        <shape android:shape="rectangle">
            <size android:width="4dp" android:height="1dp" /> <!-- Adjust the width and height of the dots -->
            <solid android:color="#F6995C" /> <!-- Adjust the color of the dots -->
        </shape>
    </item>
</layer-list>
